<h1>Listing Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list %></td>
        <td><%= list.description %></td>
        <td><%= link_to list.user.username, list.user %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to list, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-times"></i><% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
