<% lists.each do |list| %>
  <div class="col-md-4">
    <div class="panel panel-default link-box">
        <div class="panel-heading" %>
          <% if list.user == current_user %>
            <div class="pull-right">
              <%= link_to edit_list_path(list) do %><i class="fa fa-pencil"></i><% end %>
              <%= link_to list, method: :delete, data: { confirm: 'Are you sure? All items on list will be destroyed permanently.' } do %><i class="fa fa-times"></i><% end %>
            </div>
          <% end %>
          <h4 class="panel-title"><%= link_to list.name, list %>
            <% if show_users %><small>by <%= link_to list.user.username, list.user %></small><% end %>
          </h4>
        </div>
        <div class="panel-body"><small><%= list.description %></small></div>
        <div class="panel-footer">
          <%= raw list.tag_list.map { |tag| link_to tag, tag_path(tag), class:"label label-success"}.join(' ') %>
        </div>
    </div>
  </div>
<% end %>