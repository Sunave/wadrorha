<div class="row">
  <div class="col-md-4">
    <% if @user == current_user %>
      <%= link_to edit_user_registration_path do %><i class="btn btn-default pull-right fa fa-pencil"></i><% end %>
    <% end %>
    <h1><%= @user.username %></h1>
    <p><%= @user.firstname %> <%= @user.lastname %></p>
  </div>


  <div class="col-md-4">
    <div class="list-group">
      <h1>Lists</h1>
      <% @user.lists.each do |list| %>
        <%= link_to list_path, class:"list-group-item" do %>
          <h4 class="list-group-item-heading"><%= list.name %></h4>
          <div class="list-group-item"><small><%= list.description %></small></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
