<% items.each do |item| %>
  <div class="col-md-4">

    <div class="panel panel-default link-box">

      <div class="panel-heading">
        <% if item.user == current_user %>
          <div class="pull-right">
            <%= link_to edit_item_path(item) do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-times"></i><% end %>
          </div>
        <% end %>
        <h3 class="panel-title"><%= item.name %></h3>
      </div>
      <div class="panel-body">
        <small>
          <%= item.description %><br>
        </small>
        <em><%= link_to item.url, target: '_blank' %></em>
      </div>
      <div class="panel-footer">
        <%= raw item.tag_list.map { |tag| link_to tag, tag_path(tag), class:"label label-success"}.join(' ') %>
      </div>

    </div>
  </div>

<% end %>